{
  "name": "pullai",
  "version": "1.1.3",
  "author": "Elvis Brevi",
  "license": "MIT",
  "description": "AI-Powered Pull Request Descriptions generator",
  "module": "app/main.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "bin": {
    "pullai": "dist/main.js",
    "prai": "dist/main.js"
  },
  "scripts": {
    "start": "bun app/main.ts",
    "dev": "bun --hot app/main.ts",
    "build": "bun build ./app/main.ts --outdir ./dist --target node",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@inquirer/input": "^4.1.5",
    "@inquirer/select": "^4.0.8",
    "openai": "^4.83.0",
    "simple-git": "^3.27.0",
    "tsx": "^4.19.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elvisbrevi/pullai.git"
  },
  "keywords": [
    "pull-request",
    "git",
    "ai",
    "openai",
    "pr-description"
  ],
  "bugs": {
    "url": "https://github.com/elvisbrevi/pullai/issues"
  },
  "homepage": "https://github.com/elvisbrevi/pullai#readme",
  "exports": {
    ".": "./app/main.ts"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
